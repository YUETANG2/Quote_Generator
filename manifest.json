{
  "manifest_version": 3,
  "name": "Quote Generator",
  "version": "1.0",
  "description": "Generate random quotes!",
  "permissions": ["activeTab"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
